2\Item_Name=Follower Statuses
2\data_gen=TWITTER_FOLLOWERS
3\access_url=http://twitter.com/statuses/public_timeline.json?user_id=$user_id
3\Item_Name=Twitter Public Timeline
3\data_gen=TWITTER_TIMELINE
size=3

